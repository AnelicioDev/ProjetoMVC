@model ProjetoMVC.Models.Player

@{
    ViewData["Title"] = "Adicionar Jogador";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="name" class="control-label">Nome do jogador</label>
                <input asp-for="name" class="form-control"/>
            </div>
            <div>
                <label asp-for="position" class="control-label">Posição do jogador</label>
                <input asp-for="position" class="form-control"/>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add Jogador" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>